{% extends 'base.html.twig' %}

{% block title %}Players{% endblock %}

{% block body %}
<div class="container">
    <h1>Player Statistics</h1>

    <div class="actions">
        <a href="{{ path('app_home') }}" class="btn btn-secondary">Back to Home</a>
    </div>

    {% if players is empty %}
        <p class="empty-state">No players yet. <a href="{{ path('app_game_new') }}">Start a game to add players!</a></p>
    {% else %}
        <div class="players-table desktop-table">
            <table>
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Player</th>
                        <th>Games</th>
                        <th>Wins</th>
                        <th>Losses</th>
                        <th>Win Rate</th>
                        <th>Goals</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for player in players %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td class="player-name">
                                <a href="{{ path('app_player_view', {id: player.id}) }}">{{ player.name }}</a>
                            </td>
                            <td>{{ player.totalGames }}</td>
                            <td class="wins">{{ player.gamesWon }}</td>
                            <td class="losses">{{ player.gamesLost }}</td>
                            <td>{{ player.winRate|number_format(1) }}%</td>
                            <td>{{ player.totalGoalsScored }}</td>
                            <td>
                                <a href="{{ path('app_player_view', {id: player.id}) }}" class="btn btn-small">View</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="players-mobile">
            {% for player in players %}
                <a href="{{ path('app_player_view', {id: player.id}) }}" class="player-card-link">
                    <div class="player-card">
                        <div class="player-card-header">
                            <div class="player-rank">#{{ loop.index }}</div>
                            <div class="player-card-name">{{ player.name }}</div>
                            <div class="player-winrate">{{ player.winRate|number_format(0) }}%</div>
                        </div>
                        <div class="player-card-stats">
                            <div class="player-stat-item">
                                <span class="stat-label">Games</span>
                                <span class="stat-value">{{ player.totalGames }}</span>
                            </div>
                            <div class="player-stat-item">
                                <span class="stat-label">Wins</span>
                                <span class="stat-value wins">{{ player.gamesWon }}</span>
                            </div>
                            <div class="player-stat-item">
                                <span class="stat-label">Losses</span>
                                <span class="stat-value losses">{{ player.gamesLost }}</span>
                            </div>
                            <div class="player-stat-item">
                                <span class="stat-label">Goals</span>
                                <span class="stat-value">{{ player.totalGoalsScored }}</span>
                            </div>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
