{% extends 'base.html.twig' %}

{% block title %}New Game{% endblock %}

{% block body %}
<div class="container">
    <h1>Start New Game</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-error">{{ message }}</div>
    {% endfor %}

    <form method="post" action="{{ path('app_game_start') }}" class="game-form">
        <div class="teams">
            <div class="team-section">
                <h2>Team 1</h2>
                <div class="form-group">
                    <label for="team1_player1">Player 1</label>
                    <input type="text" id="team1_player1" name="team1_player1" required autocomplete="off" list="players">
                </div>
                <div class="form-group">
                    <label for="team1_player2">Player 2</label>
                    <input type="text" id="team1_player2" name="team1_player2" required autocomplete="off" list="players">
                </div>
            </div>

            <div class="vs-divider">VS</div>

            <div class="team-section">
                <h2>Team 2</h2>
                <div class="form-group">
                    <label for="team2_player1">Player 1</label>
                    <input type="text" id="team2_player1" name="team2_player1" required autocomplete="off" list="players">
                </div>
                <div class="form-group">
                    <label for="team2_player2">Player 2</label>
                    <input type="text" id="team2_player2" name="team2_player2" required autocomplete="off" list="players">
                </div>
            </div>
        </div>

        <datalist id="players">
            {# This will be populated via AJAX or server-side #}
        </datalist>

        <div class="form-actions">
            <a href="{{ path('app_home') }}" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Start Game</button>
        </div>
    </form>
</div>
{% endblock %}
